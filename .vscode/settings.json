{
    "tailwindCSS.includeLanguages": {
        "templ": "html"
    },
    "cSpell.words": ["proxyport", "testdata", "tmpl"],
    "[templ]": {
        "editor.defaultFormatter": "a-h.templ"
    },
    "restoreTerminals.runOnStartup": true,
    "restoreTerminals.terminals": [
        {
            "splitTerminals": [
                {
                    "name": "air",
                    "commands": ["make install", "make start"]
                }
            ]
        },
        {
            "splitTerminals": [
                {
                    "name": "htmx",
                    "commands": ["make htmx-watch"]
                },
                {
                    "name": "css",
                    "commands": ["make css-watch"]
                }
            ]
        },
        {
            "splitTerminals": [
                {
                    "name": "git",
                    "commands": []
                }
            ]
        }
    ]
}
